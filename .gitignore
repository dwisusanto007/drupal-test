# Drupal gitignore from example.gitignore
# Ignore configuration files that may contain sensitive information.
# See https://www.drupal.org/documentation/install/settings-file
/sites/*/settings*.php
/sites/*/services*.yml
!/sites/development.settings.php
!/sites/example.settings.php
!/sites/example.sites.php

# Ignore directories that may contain sensitive information
/sites/files/
/sites/simpletest/

# Ignore test results
/bin/
/tmp/
/web/sites/simpletest/
/web/sites/*/files/css/
/web/sites/*/files/js/
/web/sites/*/files/php/
/web/sites/*/files/styles/
/web/sites/*/files/*.php
/web/sites/*/files/*.txt
/web/sites/*/private/

# Vendor libraries
/vendor/

# Node modules
/node_modules/

# OS files
.DS_Store
Thumbs.db

# IDE files
.idea/
.vscode/
*.swp
*.swo

# DDEV - uncomment to ignore entire directory
# .ddev/
.curlrc
db.sql
*.sql.gz

# Recipes directory (generated by composer)
/recipes/

# Composer
/composer.phar
/vendor/

# Environment files
.env
.env.local

# Claude Code project notes (local only, not for version control)
.claude-notes.md

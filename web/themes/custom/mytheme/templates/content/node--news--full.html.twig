{#
/**
 * @file
 * Template for a News node in 'full' view mode (detail page).
 *
 * Layout (matches wireframe — left column of 2-col detail layout):
 *   1. h1 title
 *   2. <hr> divider
 *   3. Date — formatted via Twig, no field label
 *   4. Hero image — label hidden via mytheme_preprocess_node()
 *   5. Body content — label hidden via mytheme_preprocess_node()
 *
 * The right column sidebar (Related Event/News) is provided by
 * RelatedContentBlock placed in the 'sidebar' region.
 *
 * BEM: .node .node--news .node--view-mode-full
 */
#}
{%
  set classes = [
    'node',
    'node--news',
    'node--view-mode-full',
    not node.isPublished() ? 'node--unpublished',
  ]
%}
<article{{ attributes.addClass(classes) }}>

  <a href="{{ path('<front>') }}" class="node__back-link">← {{ 'Back to Home'|t }}</a>

  {{ title_prefix }}
  <h1{{ title_attributes.addClass('node__title') }}>{{ label }}</h1>
  {{ title_suffix }}

  <hr class="node__divider">

  {# Date — raw value formatted, no label #}
  {% if node.field_publish_date.value %}
    <div class="node__date">
      {{ node.field_publish_date.value|date('j F Y') }}
    </div>
  {% endif %}

  {# Hero image — rendered directly via file_url() to bypass formatter #}
  {% if node.field_news_image.entity %}
    <div class="node__hero-image">
      <img
        src="{{ file_url(node.field_news_image.entity.uri.value) }}"
        alt="{{ node.field_news_image.alt ?: label }}"
        loading="lazy"
      />
    </div>
  {% endif %}

  {# Body — label suppressed via preprocess #}
  <div{{ content_attributes.addClass('node__content') }}>
    {{ content.field_news_description }}
    {{ content|without(
      'field_news_image',
      'field_category',
      'field_publish_date',
      'field_news_description'
    ) }}
  </div>

</article>
